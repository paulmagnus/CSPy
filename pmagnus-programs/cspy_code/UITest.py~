import Tkinter as tk 

class Application(tk.Frame):              
    def __init__(self, master=None):
        tk.Frame.__init__(self, master)   
        self.grid()                       
        self.createWidgets()

    def checkCredentials(self):
        if self.username.get() == "asdf" and self.password.get() == "asdfasdf":
            quit()

    def createWidgets(self):
        leftCanvas = tk.Canvas(self)
        leftCanvas.grid(row=0, column=0)

        rightCanvas = tk.Canvas(self)
        rightCanvas.grid(row=0, column=3)

        self.username = tk.Entry(self)
        self.password = tk.Entry(self)
        self.username.insert(0, "Username")
        self.password.insert(0, "Password")

        self.username.grid(row=1, column=1)
        self.password.grid(row=2, column=1)

        self.login = tk.Button(self, text="Submit", command=self.checkCredentials)
        self.login.grid(row=3, column=1)

        downCanvas = tk.Canvas(self)
        downCanvas.grid(row=4, column=0)
        

app = Application()                       
app.master.title('CSPy Development Engine')    
app.mainloop()    
